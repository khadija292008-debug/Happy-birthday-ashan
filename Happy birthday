<body>
  <div class="book">
    <div class="pages">
      <!-- Page 1: Cake -->
      <div class="page" id="page1" style="z-index:3;">
        <div class="cake">🎂🕯️</div>
        <h1>Happy Birthday Ashan!</h1>
        <button onclick="nextPage(1)">Next ➡️</button>
      </div>

      <!-- Page 2: Wishes -->
      <div class="page" id="page2" style="z-index:2;">
        <div class="typing" id="wishText"></div>
        <button onclick="nextPage(2)">Next ➡️</button>
      </div>

      <!-- Page 3: Cartoon Friends -->
      <div class="page" id="page3" style="z-index:1;">
        <div class="friends">👩🎉👨</div>
        <h2>Your friends are celebrating with you 🎈</h2>
        <button onclick="restart()">🔄 Restart</button>
      </div>
    </div>
  </div>

  <script>
    let wishes = "happy birthday kharusss 🎊 may you live long oar aaj bach k rehna oar kitna lamba hona he btw? You are the most sughar man I've ever seen in my life hehe from your madam ji";
    let i = 0;

    function nextPage(p) {
      document.getElementById("page"+p).style.transform = "rotateY(-180deg)";
      if (p === 1) setTimeout(typeWriter, 1000);
    }

    function typeWriter() {
      if (i < wishes.length) {
        document.getElementById("wishText").innerHTML += wishes.charAt(i);
        i++;
        setTimeout(typeWriter, 50);
      }
    }

    function restart() {
      // Reset pages
      document.querySelectorAll(".page").forEach(pg => pg.style.transform = "rotateY(0deg)");
      // Reset typing
      document.getElementById("wishText").innerHTML = "";
      i = 0;
    }
  </script>
</body>
</html>
